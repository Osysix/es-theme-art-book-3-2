<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>

   <view name="detailed, video">      
      <image name="logo">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </image>	  
      <text name="logoText">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </text>	  
      <text name="system-name" extra="true">
         <pos>0.15 0.034375</pos>
         <size>0.7 0.03125</size>
         <text>${system.fullName}</text>
         <alignment>center</alignment>
         <fontSize>0.03125</fontSize>
         <fontPath>${bodyFont}</fontPath>
         <forceUppercase>true</forceUppercase>
      </text>	  
      <image name="md_marquee">
	 <default>./_inc/images/351elec.png</default>
         <visible>true</visible>
	 <origin>0.5 0.5</origin>
         <pos>0.75 0.23125</pos>
         <maxSize>0.38 0.23</maxSize>
      </image>	  
	 <image name="md_marquee_background" extra="true">
         <path>./_inc/images/marquee_background.png</path>
         <origin>0.5 0</origin>
	 <pos>0.75 0.10625</pos>
      </image>	  	  	  
      <textlist name="gamelist">
         <pos>0.020833333333334 0.10625</pos>
         <size>0.479166666666667 0.9</size>
	 <lineSpacing>1.69</lineSpacing>
      </textlist>	  	  
      <text name="md_lbl_releasedate">
         <visible>true</visible>
         <pos>0.55 0.86</pos>
         <fontSize>0.03</fontSize>
         <color>444444</color>
      </text>	  
      <datetime name="md_releasedate">
         <visible>true</visible>
         <pos>0.665 0.86</pos>
         <size>0 0</size>
         <fontSize>0.03</fontSize>
         <color>FFFFFF55</color>
      </datetime>	  
      <text name="md_lbl_developer">
         <visible>true</visible>
         <pos>0.55 0.917</pos>
         <fontSize>0.03</fontSize>
      </text>	  
      <text name="md_developer">
         <visible>true</visible>
         <pos>0.665 0.917</pos>
         <size>0 0</size>
         <fontPath>${bodyFont}</fontPath>
         <fontSize>0.03</fontSize>
         <color>FFFFFF55</color>
      </text>	  
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.75 0.6125</pos>
         <maxSize>0.4 0.45</maxSize>
      </video>	  
      <image name="background" extra="true">
         <color>121212</color>
      </image>
   </view>

   <view name="detailed">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.75 0.6125</pos>
         <maxSize>0.4 0.45</maxSize>
      </image>	  
	 <video name="md_video">
         <visible>false</visible>
      </video>
    </view>

   <view name="grid">
      <image name="background" extra="true">
         <color>111111</color>
      </image>
   </view>

</theme>
